<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:background="#F6F6F5"
    android:layout_margin="10dp"
    android:padding="20dp"
    >
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/download"
        android:layout_centerHorizontal="true"
        android:paddingTop="3dp"
        android:contentDescription="@string/anhdt"/>
    <ImageView
        android:layout_below="@id/image"
        android:id="@+id/tiki"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:src="@drawable/tiki"
        android:layout_centerHorizontal="true"
        android:paddingTop="3dp"
        android:contentDescription="@string/anhdt"/>
    <TextView
        android:layout_centerHorizontal="true"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:id="@+id/ngonNgu"
        android:layout_below="@id/tiki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:textSize="12sp"
        android:text="@string/i_n_tho_i_vsmast_80gb"/>
    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/moTa"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gi"
        android:layout_below="@id/ngonNgu"
        android:paddingTop="3dp"
        android:textSize="16sp" />
    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/phongHoc"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/r_h_n_ho_n_ti_n"
        android:textColor="#B81E13"
        android:layout_below="@id/moTa"
        android:paddingTop="3dp"
        android:textSize="16sp" />
    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/tiet"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nhieumau"
        android:layout_below="@id/phongHoc"
        android:paddingTop="3dp"
        android:textSize="13sp" />
</RelativeLayout>

